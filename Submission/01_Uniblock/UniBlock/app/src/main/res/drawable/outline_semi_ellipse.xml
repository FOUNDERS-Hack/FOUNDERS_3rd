<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item >

        <shape android:shape="rectangle">

            <corners android:topLeftRadius="0dp" android:topRightRadius="15dp" android:bottomLeftRadius="0dp" android:bottomRightRadius="15dp" />

            <solid android:color="#ffd97d54" />

            <item android:shadowColor="#33000000"></item>

            <!-- TextView shadow offsets do not respect scale. -->

            <item android:shadowDx="0"></item>

            <item android:shadowDy="1"></item>

        </shape>

    </item>
</selector>